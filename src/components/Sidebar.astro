<!-- Incluir Swiper JS y CSS -->
<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

<script>
  // Inicializar Swiper solo en móviles
  if (window.innerWidth < 768) {
    const swiper = new Swiper('.swiper-container', {
      slidesPerView: 'auto',
      spaceBetween: 10,
      loop: true,
      autoplay: {
        delay: 2000,
        disableOnInteraction: false,
      },
    });
  }
</script>

<style>
  /* Estilos para hacer más compacto el sidebar en móvil */
  @media (max-width: 767px) {
    .swiper-container {
      padding: 0 10px;
    }
    .swiper-slide {
      width: 80px !important;
    }
  }
</style>


  <script is:inline>
  if (window.innerWidth < 768) {
    new Swiper('.swiper', {
      modules: [Autoplay],
      slidesPerView: 'auto',
      loop: true,
      autoplay: { delay: 2000 },
    });
  }
