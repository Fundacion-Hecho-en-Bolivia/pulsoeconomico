---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Sidebar from "../components/Sidebar.astro";
import "../styles/global.css";
---
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
  <meta name="google-adsense-account" content="ca-pub-9817607961607854">
  <title>Pulso Económico</title>
  <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
<ins class="adsbygoogle"
         style="display:inline-block;width:728px;height:90px"
         data-full-width-responsive="true"
         data-ad-client="ca-pub-XXX"
         data-ad-slot="XXX"></ins>
<script is:inline>
         (adsbygoogle = window.adsbygoogle || []).push({});
</script>
</head>
<body class="min-h-screen flex flex-col bg-gray-50">
  <!-- Header -->
  <Header />

  <!-- Contenido principal con sidebar -->
  <div class="flex-1 flex flex-col md:flex-row">
    <!-- 
      Main content - Se muestra PRIMERO en móvil (orden 2)
      md: Orden 1 (primera columna) y ancho 70%
    -->
    <main class="order-2 md:order-1 md:w-7/12 lg:w-8/12 p-4 bg-white">
      <slot />
    </main>

    <!-- 
      Sidebar - Se muestra SEGUNDO en móvil (orden 1)
      md: Orden 2 (segunda columna) y ancho 30%
    -->
    <aside class="order-1 md:order-2 md:w-5/12 lg:w-4/12 p-4 bg-gray-200">
      <Sidebar />
    </aside>
  </div>

  <!-- Footer -->
  <Footer />
</body>
</html>
